<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="gdg_centrosul">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>br.com.gdgtresrios.sicomerciows.v1.model.CategoriaEvento</class>
        <class>br.com.gdgtresrios.sicomerciows.v1.model.Configuracao</class>
        <class>br.com.gdgtresrios.sicomerciows.v1.model.CategoriaColaborador</class>
        <class>br.com.gdgtresrios.sicomerciows.v1.model.Colaborador</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/gdg_centrosul"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="12345678"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
